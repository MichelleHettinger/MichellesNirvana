	    <script type="text/javascript">
	    	
			$('.appThumbnail').click(function(){

				var dataApp = $(this).data('app');
				var dataActive = $(this).data('active');

				//Loop through the number of apps
				for (var i=0; i<8; i++){
					//Make the clicked on app visible
					//And make the app that was visible invisible
					if (dataApp == i){
						$('#myApp' + dataApp).removeClass('sr-only');
						$('#myApp' + dataActive).addClass('sr-only');
					}
				}

				window.scroll(0,580);
			});



			//If screen is less than or equal to 1199px
			enquire.register("screen and (max-width:1199px)", {

				match : function() {
					$('#jumboPicture').addClass('sr-only');
				},
				unmatch : function() {
					$('#jumboPicture').removeClass('sr-only');
				}
			});


	    </script>



